import pygame
import sys

# 遊戲常數設定
SCREEN_WIDTH = 600
SCREEN_HEIGHT = 800
FPS = 60 # 遊戲每秒的幀數 (更新速度)

# 初始化 Pygame
pygame.init()

# 建立遊戲視窗
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption("Python Pinball Project")

# 建立時鐘物件 (用於控制遊戲幀率)
clock = pygame.time.Clock()

# --- 遊戲主迴圈 (Game Loop) ---
running = True
while running:
    # 1. 事件處理
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False # 按下視窗關閉按鈕
        
    # 2. 遊戲狀態更新
    # 這裡未來會更新彈珠位置等
    
    # 3. 繪圖
    screen.fill((0, 0, 0)) # 用黑色 (RGB: 0, 0, 0) 填充背景
    
    # 更新整個畫面顯示
    pygame.display.flip()

    # 控制遊戲幀率
    clock.tick(FPS)

# 遊戲結束，退出 Pygame
pygame.quit()
sys.exit()
